#version 330 core

layout(location = 0)in vec3 posAttr;
layout(location = 1)in vec2 corAttr;
layout(location = 2)in vec3 normalAttr;

out vData
{
    highp vec3 flow;
    highp vec3 fpos;
    highp vec2 tCoord;
    highp vec3 normal;
}vertex;
uniform highp mat4 objToScreen;
uniform highp mat4x3 objToCameraFlow;
uniform highp mat4x3 objToWorld;
uniform highp mat4x3 objToWorldNormal;

void main() {
    gl_Position = objToScreen * vec4(posAttr,1);
    vertex.tCoord = corAttr;
    vertex.normal = objToWorldNormal * vec4(normalAttr,0);
    vertex.flow = objToCameraFlow * vec4(posAttr,1);
    vertex.fpos = objToWorld * vec4(posAttr,1);
}

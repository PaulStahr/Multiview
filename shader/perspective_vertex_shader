#version 330 core
in highp vec3 posAttr;
in vec2 corAttr;
out vData
{
    highp vec3 flow;
    highp vec3 fpos;
    highp vec2 texCoordV;
}vertex;
uniform highp mat4 matrix;
uniform highp mat4x3 flowMatrix;
uniform highp mat4x3 curMatrix;
void main() {
    gl_Position = matrix * vec4(posAttr,1);
    vertex.texCoordV = corAttr;
    vertex.flow = (flowMatrix * vec4(posAttr,1)).xyz;
    vertex.fpos = (curMatrix * vec4(posAttr,1)).xyz;
}

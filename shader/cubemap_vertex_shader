#version 330 core

layout(location = 0)in highp vec3 posAttr;
layout(location = 1)in vec3 normalAttr;
layout(location = 2)in vec2 corAttr;

uniform highp mat4 objToScreen;
uniform highp mat4x3 objToCameraFlow;

out vData
{
    highp vec3 flow;
    vec2 tCoord;
    lowp vec3 normal;
}vertex;

void main() {
    gl_Position = objToScreen * vec4(posAttr,1);
    vertex.tCoord = corAttr;
    vertex.flow = objToCameraFlow * vec4(posAttr,1);
    vertex.normal = normalAttr;
}
